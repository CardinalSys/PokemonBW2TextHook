<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="PkmBW2TextHook.MainWindow"
        Title="PkmBW2TextHook" Width="800" Height="500">

	<DockPanel LastChildFill="True" Margin="10">

		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="15">
			<Button Name="HookButton" Content="Hook Emulator" Width="180" Height="40" CornerRadius="6"/>
			<Button Name="StartButton" Content="Start Extraction" Width="180" Height="40" CornerRadius="6"/>
			<CheckBox Name="AutoCopyCheckBox" Content="Auto copy to clipboard" VerticalAlignment="Center" Margin="20,0,0,0"/>
		</StackPanel>

		<Border BorderBrush="#cccccc" BorderThickness="1" CornerRadius="4" Margin="0,15,0,0">
			<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
				<TextBox Name="LogTextBox"
                         AcceptsReturn="True"
                         IsReadOnly="True"
                         Background="Black"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="14"
                         Margin="5"/>
			</ScrollViewer>
		</Border>

	</DockPanel>
</Window>
